@page "{handler?}"
@model SadafStore.web.Pages.Admin.Discounts.CreateDiscountModel
@{
}


<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div>
                <ol class="linkinhead ">
                    <li><a href="/">خانه</a></li>
                    <li><a href="/Admin">پنل مدیریت</a></li>
                    <li><a href="/Admin/Discounts">لیست تخفیف‌ها</a></li>
                    <li class="#">افزودن تخفیف جدید</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card-box">
    <div class="row">
        <form class="form-horizontal" method="post" enctype="multipart/form-data">
            <h4 class="card-title">ایجاد نقش جدید</h4>
            <div class="col-md-8">
                <div class="form-group">
                    <label class="control-label col-md-2">کد تخفیف :</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" asp-for="Discounts.DisCountCode" placeholder="کد تخفیف را وارد کنید">
                        <div id="alertCode" class="alert alert-danger" style="display: none">
                            <p class="text-muted">کد وارد شده وجود دارد از کد دیگری استفاده کنید</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">درصد تخفیف :</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" asp-for="Discounts.DisCountPercent" placeholder="درصد تخفیف را وارد کنید">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">تعداد استفاده :</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" asp-for="Discounts.UsableCount" placeholder="تعداد استفاده از کد را وارد کنید">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">تاریخ شروع :</label>
                    <div class="col-md-3">
                        <input id="stDate" name="stDate" placeholder="تاریخ شروع">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">تاریخ شروع :</label>
                    <div class="col-md-3">
                        <input id="edDate" name="edDate" placeholder="تاریخ پایان">
                    </div>
                </div>

                <button type="submit" class="btn btn-success">ایجاد کد تخفیف جدید</button>

            </div>
            
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        $("#Discount_DiscountCode").blur(function () {

            $.ajax({
                type: "get",
                url: "/Admin/Discount/CreateDiscount/CheckCode?code=" + $("#Discount_DiscountCode").val()
            }).done(function (res) {
                if (res === 'True') {
                    $("#alertCode").show();
                } else {
                    $("#alertCode").hide();
                }
            });

        });
    </script>
    

    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="/js/kendo.all.min.js"></script>
    <script>
        // create DatePicker from input HTML element
        $("#stDate").kendoDatePicker();
        $("#edDate").kendoDatePicker();
    </script>


}
