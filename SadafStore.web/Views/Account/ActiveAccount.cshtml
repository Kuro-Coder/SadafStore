
@{
    ViewData["Title"] = "فعالسازی حساب";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-6">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>فعالسازی حساب کاربری</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->

<div class="login_page_bg">
    <div class="container">
        <div class="customer_login">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                </div>
                <!--register area start-->
                <div class="col-lg-6 col-md-6">
                    <div class="account_form register">
                        <h2>@User.Identity.Name عزیز</h2>

                        @if (ViewBag.IsActive)
                        {
                            <div class="alert alert-success">
                                <p>حساب کاربری شما با موفقیت فعال شد شما میتوانین وارد سایت شوید:</p>
                                <p>
                                    <a href="/Login">ورود به سایت</a>
                                </p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <p>حساب کاربری با مشخصات ارسال شده فعال نمی‌باشد.</p>
                            </div>
                        }

                    </div>
                </div>
                <!--register area end-->
            </div>
        </div>
    </div>
</div>