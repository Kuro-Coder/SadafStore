@model IEnumerable<SadafStore.DataLayer.Entities.Product.ProductGroup>


<div class="categories_menu">
    <div class="categories_title">
        <h2 class="categori_toggle">دسته بندی ها</h2>
    </div>
    <div class="categories_menu_toggle" style="display: none">
        <ul>
            @foreach (var group in Model.Where(g => g.ParentId == null))
            {
                <li class="menu_item_children">
                    <a href="/Product?selectedGroups=@group.GroupId">@group.GroupTitle <i class="fa fa-angle-left"></i></a>
                    @if (Model.Any(g => g.ParentId == group.GroupId))
                    {
                        <ul class="categories_mega_menu">
                            @foreach (var subGroupLevel1 in Model.Where(g => g.ParentId == group.GroupId))
                            {
                                <li class="menu_item_children">
                                    <a href="/Product?selectedGroups=@subGroupLevel1.GroupId">@subGroupLevel1.GroupTitle</a>
                                    @if (Model.Any(g => g.ParentId == subGroupLevel1.GroupId))
                                    {
                                        <ul class="categorie_sub_menu">
                                            @foreach (var subGroupLevel2 in Model.Where(g => g.ParentId == subGroupLevel1.ParentId))
                                            {
                                                <li><a href="/Product?selectedGroups=@subGroupLevel2.GroupId">@subGroupLevel2.GroupTitle</a></li>
                                            }
                                        </ul>
                                    }
                                </li>
                            }

                        </ul>
                    }
                </li>
            }
            <li id="cat_toggle" class="has-sub">
                <a href="#"> دسته های بیشتر</a>
                <ul class="categorie_sub">
                    <li><a href="#">دسته های پنهان</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>